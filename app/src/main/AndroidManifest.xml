<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gio.lessnote">

    <application
        android:name=".application.LessNoteApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/noAnimTheme">
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.MainActivity"
            android:theme="@style/noAnimTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <data android:name="android.content.Intent.FLAG_ACTIVITY_NO_ANIMATION" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.SundayActivity"
            android:theme="@style/noAnimTheme"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.SaturdayActivity"
            android:theme="@style/noAnimTheme"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.FridayActivity"
            android:theme="@style/noAnimTheme"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.ThursdayActivity"
            android:theme="@style/noAnimTheme"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.WednesdayActivity"
            android:theme="@style/noAnimTheme"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.MondayActivity"
            android:theme="@style/noAnimTheme"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.TuesdayActivity"
            android:theme="@style/noAnimTheme"/>
        <activity android:name=".activities.ygygygy"/>
    </application>

</manifest>